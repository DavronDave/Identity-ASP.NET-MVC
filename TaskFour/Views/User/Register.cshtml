@model TaskFour.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Registration";
}

<div class="container col-md-4 bg-white p-4 rounded border border-success">
   <div class="bg-success p-1 rounded-top">
        <h2 class="text-center rounded-top text-white">Register</h2>
   </div>
    <hr/>
    <div>
        <div class="">
            <form asp-action="Register">

                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control shadow" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" type="email" class="form-control shadow" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" type="password" class="form-control shadow" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ConfirmPassword" class="control-label"></label>
                    <input asp-for="ConfirmPassword" type="password" class="form-control shadow" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
              
             @*   <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>*@
                <div class="container">
					<div class="row">
						<div class="col text-center">
                            <button class="btn btn-success shadow">Create</button>
						</div>
					</div>
				</div>
            </form>
        </div>
    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
