@*@model Task_4_Itransion.Models.User*@
@model TaskFour.ViewModels.LoginViewModel

@{
	ViewData["Title"] = "Login";
}
<div class="container col-md-4 p-4 bg-white rounded border border-success">
	<div class="bg-success rounded-top text-white p-1" >
		<h2 class="text-center">Login</h2>
	</div>
	<hr />
	<div>
		<div>
			<form asp-action="Login">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<div class="form-group form-floating">
					<label asp-for="Email" for="emailFloating" class="control-label"></label>
					<input asp-for="Email" id="emailFloating" class="form-control shadow" />
					<span asp-validation-for="Email" class="text-danger"></span>
				</div>

				<div class="form-group">
					<label asp-for="Password" class="control-label"></label>
					<input asp-for="Password" class="form-control shadow" type="password" />
					<span asp-validation-for="Password" class="text-danger"></span>
				</div>

				<div class="form-group">
					<div class="checkbox">
						<label asp-for="RememberMe">
							<input asp-for="RememberMe" />
							@Html.DisplayNameFor(m => m.RememberMe)
						</label>
					</div>
				</div>

				<h6>@ViewBag.Error</h6>

				<div class="container">
					<div class="row">
						<div class="col text-center">
							<button class="btn btn-success">Login</button>
						</div>
					</div>
				</div>
			</form>
		</div>
	</div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}

}
